<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:piechart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.xp.xppiechart.MainActivity">
    <com.xp.xppiechart.view.CustomPieChartView
        piechart:startAngle="-180"
        piechart:pieinterval="0.5"
        android:id="@+id/pie_chart"
        piechart:innerToOuterWidth="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <Button
        android:onClick="dianji"
        android:text="点击"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
